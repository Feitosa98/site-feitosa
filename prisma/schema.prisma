generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Settings {
  id                  String  @id @default("settings")
  environment         String  @default("homologacao")
  emailEnabled        Boolean @default(false)
  emailAddress        String?
  whatsappEnabled     Boolean @default(false)
  whatsappNumber      String?
  certificatePath     String?
  certificatePassword String?
}

model Client {
  id        String    @id @default(cuid())
  name      String
  cpfCnpj   String    @unique
  email     String?
  phone     String?
  address   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  assets    Asset[]
  charges   Charge[]
  invoices  Invoice[]
  notes     Note[]
  receipts  Receipt[]
  services  Service[]
  users     User[]
  messages  Message[]
}

model Guide {
    id        String   @id @default(cuid())
    title     String
    content   String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Note {
  id                String   @id @default(cuid())
  numero            Int
  codigoVerificacao String
  value             Float
  description       String?
  emissionDate      DateTime @default(now())
  linkPdf           String?
  status            String   @default("PENDENTE")
  clientId          String?
  clientName        String
  clientCpfCnpj     String
  linkConsulta      String?
  mensagemErro      String?
  protocolo         String?
  xmlDps            String?
  xmlNfse           String?
  serviceId         String?
  client            Client?  @relation(fields: [clientId], references: [id])
  service           Service? @relation(fields: [serviceId], references: [id])
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String?
  value       Float
  serviceCode String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  clientId    String?
  charges     Charge[]
  notes       Note[]
  client      Client?  @relation(fields: [clientId], references: [id])
}

model Invoice {
  id            String    @id @default(cuid())
  numero        Int
  value         Float
  dueDate       DateTime
  paymentDate   DateTime?
  status        String    @default("PENDENTE")
  barcode       String?
  digitableLine String?
  linkPdf       String?
  description   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  clientId      String
  chargeId      String?
  charge        Charge?   @relation(fields: [chargeId], references: [id])
  client        Client    @relation(fields: [clientId], references: [id])
}

model Charge {
  id          String    @id @default(cuid())
  description String
  value       Float
  dueDate     DateTime
  status      String    @default("PENDENTE")
  paymentDate DateTime?
  paymentType String?
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  clientId    String
  serviceId   String?
  client      Client    @relation(fields: [clientId], references: [id])
  service     Service?  @relation(fields: [serviceId], references: [id])
  invoices    Invoice[]
  receipts    Receipt[]
}

model Receipt {
  id          String   @id @default(cuid())
  numero      String   @unique
  value       Float
  description String
  paymentDate DateTime @default(now())
  paymentType String
  linkPdf     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  clientId    String
  chargeId    String?
  charge      Charge?  @relation(fields: [chargeId], references: [id])
  client      Client   @relation(fields: [clientId], references: [id])
}

model Asset {
  id           String    @id @default(cuid())
  name         String
  code         String?
  description  String?
  purchaseDate DateTime?
  value        Float?
  status       String    @default("ATIVO")
  imageUrl     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  clientId     String
  client       Client    @relation(fields: [clientId], references: [id])
}

model User {
  id        String   @id @default(cuid())
  name      String
  username  String   @unique
  password  String
  email     String?  @unique
  role      String   @default("client")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clientId  String?
  client    Client?  @relation(fields: [clientId], references: [id])
  mustChangePassword Boolean @default(false)
  messageResponses MessageResponse[]
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  email     String
  expires   DateTime
  createdAt DateTime @default(now())
}

model Expense {
  id          String   @id @default(cuid())
  description String
  category    String
  value       Float
  date        DateTime @default(now())
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Message {
  id          String   @id @default(cuid())
  subject     String
  content     String
  status      String   @default("OPEN") // OPEN, CLOSED, ARCHIVED
  type        String   @default("GENERAL") // GENERAL, PASSWORD_RESET
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])
  responses   MessageResponse[]
}

model MessageResponse {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  messageId String
  message   Message  @relation(fields: [messageId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
