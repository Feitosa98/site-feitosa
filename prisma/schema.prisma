
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Settings {
  id                  String  @id @default("settings")
  environment         String  @default("homologacao") // 'homologacao' | 'producao'
  emailEnabled        Boolean @default(false)
  emailAddress        String?
  whatsappEnabled     Boolean @default(false)
  whatsappNumber      String?
  certificatePath     String?
  certificatePassword String?
}

model Client {
  id        String    @id @default(cuid())
  name      String
  cpfCnpj   String    @unique
  email     String?
  phone     String?
  address   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Relationships
  notes     Note[]
  services  Service[]
  invoices  Invoice[]
  charges   Charge[]
  receipts  Receipt[]
  assets    Asset[]
  users     User[]
}

model Note {
  id                String   @id @default(cuid())
  numero            Int
  codigoVerificacao String
  value             Float
  description       String?
  emissionDate      DateTime @default(now())
  linkPdf           String?
  status            String   @default("PENDENTE") // 'PENDENTE', 'AUTORIZADA', 'REJEITADA', 'CANCELADA'
  
  // NFS-e Integration Fields
  linkConsulta      String?  // URL oficial de consulta retornada pela API
  xmlDps            String?  @db.Text // XML da DPS enviada
  xmlNfse           String?  @db.Text // XML da NFS-e autorizada
  protocolo         String?  // Número do protocolo de autorização
  mensagemErro      String?  // Mensagem de erro caso seja rejeitada
  
  // Client relationship
  clientId          String?
  clientName        String
  clientCpfCnpj     String
  client            Client?  @relation(fields: [clientId], references: [id])
  
  // Service relationship (optional - if note is for a specific service)
  serviceId         String?
  service           Service? @relation(fields: [serviceId], references: [id])
}

model Service {
  id          String   @id @default(cuid())
  name        String   // Nome do serviço
  description String?  @db.Text
  value       Float    // Valor padrão do serviço
  serviceCode String?  // Código LC 116 (ex: 01.01)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Client relationship (services can be assigned to specific clients)
  clientId    String?
  client      Client?  @relation(fields: [clientId], references: [id])
  
  // Related notes
  notes       Note[]
  charges     Charge[]
}

model Invoice {
  id            String   @id @default(cuid())
  numero        Int      // Número do boleto
  value         Float
  dueDate       DateTime // Data de vencimento
  paymentDate   DateTime? // Data de pagamento (null se não pago)
  status        String   @default("PENDENTE") // 'PENDENTE', 'PAGO', 'VENCIDO', 'CANCELADO'
  barcode       String?  // Código de barras
  digitableLine String?  // Linha digitável
  linkPdf       String?  // Link para PDF do boleto
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Client relationship
  clientId      String
  client        Client   @relation(fields: [clientId], references: [id])
  
  // Related charge
  chargeId      String?
  charge        Charge?  @relation(fields: [chargeId], references: [id])
}

model Charge {
  id          String   @id @default(cuid())
  description String
  value       Float
  dueDate     DateTime
  status      String   @default("PENDENTE") // 'PENDENTE', 'PAGO', 'VENCIDO', 'CANCELADO'
  paymentDate DateTime?
  paymentType String?  // 'PIX', 'BOLETO', 'TRANSFERENCIA', 'DINHEIRO', 'CARTAO'
  notes       String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Client relationship
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])
  
  // Service relationship (optional)
  serviceId   String?
  service     Service? @relation(fields: [serviceId], references: [id])
  
  // Related documents
  invoices    Invoice[]
  receipts    Receipt[]
}

model Receipt {
  id            String   @id @default(cuid())
  numero        String   @unique // Format: YYYYMMDDNNNN
  value         Float
  description   String   @db.Text
  paymentDate   DateTime @default(now())
  paymentType   String   // 'PIX', 'BOLETO', 'TRANSFERENCIA', 'DINHEIRO', 'CARTAO'
  linkPdf       String?  // Link para PDF do recibo
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Client relationship
  clientId      String
  client        Client   @relation(fields: [clientId], references: [id])
  
  // Related charge (optional)
  chargeId      String?
  charge        Charge?  @relation(fields: [chargeId], references: [id])
}

model Asset {
  id            String   @id @default(cuid())
  name          String   // Nome do ativo (ex: Notebook Dell)
  code          String?  // Código de patrimônio ou série
  description   String?  @db.Text
  purchaseDate  DateTime?
  value         Float?
  status        String   @default("ATIVO") // 'ATIVO', 'MANUTENCAO', 'BAIXADO'
  imageUrl      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  clientId      String
  client        Client   @relation(fields: [clientId], references: [id])
}

model User {
  id            String   @id @default(cuid())
  name          String
  username      String   @unique
  password      String   // Hashed
  email         String?  @unique
  role          String   @default("client") // 'admin' | 'client'
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  clientId      String?
  client        Client?  @relation(fields: [clientId], references: [id])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  email     String
  expires   DateTime
  createdAt DateTime @default(now())
}

model Expense {
  id          String   @id @default(cuid())
  description String
  category    String   // 'OPERACIONAL', 'PESSOAL', 'IMPOSTOS', 'INFRAESTRUTURA', 'MARKETING', 'OUTROS'
  value       Float
  date        DateTime @default(now())
  notes       String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
